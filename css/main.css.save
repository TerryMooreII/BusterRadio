body {
    margin:0;
    font-size: 1em;
    line-height: 1.4;
    height:100%;
    position: relative;
}

* html #wrapper{
    height:100%;
    position: relative;
    width: 100%;
}
#wrapper{
    border:1px solid pink;
    height:100%;
    position:relative;
}
#header{    
    position:absolute;
    background-color: red;
    top: 0px;
    width:100%;
    height:90px;
}
#footer{    
    position:absolute;
    background-color: red;
    width:100%;
    height:90px;
    bottom:0px
}
#content{
    position:absolute;
    top:90px;
    bottom:90px;
    width:1025px;
    left:50%;
    margin-left:-500px;

}
#right{ 

    float:left;
    border:1px solid green;
    width:500px;
    min-height:100%;

}
#left{
    position:relative;
    margin-right:20px;
    float:left;
    min-height:100%;
    border:1px solid blue;
    width:500px;
}
